<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popwindow_toolmore_bg"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="15dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_toobar_select_bg"
            android:scaleType="center"
            android:src="@mipmap/toolbar_black" />

        <ImageView
            android:id="@+id/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_toobar_unselect_bg"
            android:scaleType="center"
            android:src="@mipmap/toolbar_red" />

        <ImageView
            android:id="@+id/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_toobar_unselect_bg"
            android:scaleType="center"
            android:src="@mipmap/toolbar_yellow" />

        <ImageView
            android:id="@+id/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_toobar_unselect_bg"
            android:scaleType="center"
            android:src="@mipmap/toolbar_green" />

        <ImageView
            android:id="@+id/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_toobar_unselect_bg"
            android:scaleType="center"
            android:src="@mipmap/toolbar_blue" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/paint_width_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_toobar_select_bg"
            android:scaleType="center"
            android:src="@mipmap/toolbar_size_small" />

        <ImageView
            android:id="@+id/paint_width_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_toobar_unselect_bg"
            android:scaleType="center"
            android:src="@mipmap/toolbar_size_middle" />

        <ImageView
            android:id="@+id/paint_width_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_toobar_unselect_bg"
            android:scaleType="center"
            android:src="@mipmap/toolbar_size_large" />
    </LinearLayout>


</LinearLayout>